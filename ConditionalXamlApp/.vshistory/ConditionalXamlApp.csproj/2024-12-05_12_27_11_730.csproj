	<!-- Added -->
	<PropertyGroup>
		<!-- Path to the XSLT stylesheet -->
		<XsltStylesheet>PreprocessXaml.xslt</XsltStylesheet>
		<!-- Temporary directory for preprocessed XAML files -->
		<TempXamlDir>$(IntermediateOutputPath)PreprocessedXaml\</TempXamlDir>
		<!-- Check if 'fix_issue_001' is defined in 'DefineConstants' -->
		<IsFixIssue001Defined>$([System.String]::Copy('$(DefineConstants)').Contains('fix_issue_001'))</IsFixIssue001Defined>
	</PropertyGroup>
	<!-- Import XSLT Task -->
	<UsingTask TaskName="XslTransformation" TaskFactory="CodeTaskFactory" AssemblyName="Microsoft.Build.Tasks.v4.0">
		<ParameterGroup>
			<InputFiles ParameterType="Microsoft.Build.Framework.ITaskItem[]" Required="true" />
			<OutputFiles ParameterType="Microsoft.Build.Framework.ITaskItem[]" Required="true" />
			<XsltFile ParameterType="System.String" Required="true" />
			<Parameters ParameterType="System.String" Required="false" />
		</ParameterGroup>
		<Task>
			<Using Namespace="System" />
			<Using Namespace="System.IO" />
			<Using Namespace="System.Xml.Xsl" />
			<Code Type="Fragment" Language="cs">
				<![CDATA[
          var xslt = new XslCompiledTransform();
          xslt.Load(XsltFile);

          for (int i = 0; i < InputFiles.Length; i++)
          {
              var inputFile = InputFiles[i].ItemSpec;
              var outputFile = OutputFiles[i].ItemSpec;

              var xsltArgs = new XsltArgumentList();
              if (!string.IsNullOrEmpty(Parameters))
              {
                  foreach (var param in Parameters.Split(';'))
                  {
                      var kvp = param.Split('=');
                      xsltArgs.AddParam(kvp[0], "", kvp[1]);
                  }
              }

              using (var writer = System.Xml.XmlWriter.Create(outputFile))
              {
                  xslt.Transform(inputFile, xsltArgs, writer);
              }
          }
        ]]>
			</Code>
		</Task>
	</UsingTask>
	<!-- Preprocess XAML files before compilation -->
	<Target Name="PreprocessXaml" BeforeTargets="CoreCompile">
		<!-- Collect all XAML files -->
		<ItemGroup>
			<XamlFiles Include="**\*.xaml" Exclude="$(TempXamlDir)**\*" />
		</ItemGroup>
		<!-- Create the temporary directory for processed XAML files -->
		<MakeDir Directories="$(TempXamlDir)" />
		<!-- Transform each XAML file -->
		<XslTransformation InputFiles="@(XamlFiles)" OutputFiles="@(XamlFiles->'$(TempXamlDir)%(RecursiveDir)%(Filename)%(Extension)')" XsltFile="$(XsltStylesheet)" Parameters="fix_issue_001=$(IsFixIssue001Defined)" />
		<!-- Update the 'Page' item group to use the transformed XAML files -->
		<ItemGroup>
			<Page Remove="@(XamlFiles)" />
			<Page Include="$(TempXamlDir)**\*.xaml" />
		</ItemGroup>
	</Target>
